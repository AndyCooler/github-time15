<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mythosapps.time15">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/time15_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mythosapps.time15.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mythosapps.time15.MonthOverviewActivity"
            android:label="Time15 Month Overview"
            android:parentActivityName="com.mythosapps.time15.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mythosapps.time15.MainActivity" />
        </activity>
        <activity
            android:name="com.mythosapps.time15.YearOverviewActivity"
            android:label="Time15 Year Overview"
            android:parentActivityName="com.mythosapps.time15.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mythosapps.time15.MainActivity" />
        </activity>
        <activity
            android:name="com.mythosapps.time15.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.mythosapps.time15.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mythosapps.time15.MainActivity" />
        </activity>
    </application>

</manifest>
